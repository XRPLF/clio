if(CMAKE_CXX_COMPILER_ID STREQUAL "Clang")
  message(STATUS "Enabling address sanitizer")
  target_compile_options(clio_tests PRIVATE -g -fsanitize=address -fno-omit-frame-pointer) 
  target_link_options (clio_tests PRIVATE -g -fsanitize=address -fno-omit-frame-pointer)
  target_compile_options(clio_server PRIVATE -g -fsanitize=address -fno-omit-frame-pointer) 
  target_link_options (clio_server PRIVATE -g -fsanitize=address -fno-omit-frame-pointer)
else()
  message(FATAL "ENABLE_ASAN requested but compiler is not Clang")
endif()
